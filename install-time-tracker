echo Setting up conda environment
conda env create 
conda activate time-tracker

echo installing SwiftBar Plugin
ln -s `pwd`/time-tracker.py `defaults read com.ameba.SwiftBar PluginDirectory`/time-tracker.1m.py

echo installing launch agent
cat <<EOF > ~/Library/LaunchAgents/de.oefelein.time-tracker.plist
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Label</key>
	<string>de.oefelein.time-tracker</string>
	<key>ProgramArguments</key>
	<array>
		<string>`which python`</string>
		<string>$PWD/time-tracker.py</string>
		<string>agent</string>
	</array>
    <key>KeepAlive</key>
    <true/>
</dict>
</plist>
EOF

launchctl load ~/Library/LaunchAgents/de.oefelein.time-tracker.plist

echo done!